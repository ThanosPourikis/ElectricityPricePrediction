{% extends "base.jinja" %}
{% block content %}
	<h1>{{title}}</h1>
	

	<div id="chart_json"></div>
	<script>
		var graph = {{ chart_json | safe }};
		Plotly.plot('chart_json', graph, {});
	</script>

	<table class="table">
	{% for i in metrics.index %}
		<thead>
			<tr>
				<th>Train {{i}}</th>
				<th>Validation {{i}}</th>
				<th>Test {{i}}</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td scope="row">{{metrics.loc[i,'Train']}}</td>
				<td>{{metrics.loc[i,'Validation']}}</td>
				<td>{{metrics.loc[i,'Test']}}</td>
			</tr>
		</tbody>
	{% endfor %}

	</table>

	{{ model }}
	{% block more_data %}
	{% endblock more_data %}
{% endblock content %}
